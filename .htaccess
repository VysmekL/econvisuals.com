# Infographic CMS - Apache Configuration
# ============================================================================

# Zapnout RewriteEngine
RewriteEngine On

# Zakázat procházení adresářů
Options -Indexes

# Zabránit zobrazení .git a dalších citlivých souborů
RedirectMatch 404 /\.git

# ============================================================================
# POVOLENÍ PŘÍSTUPU K _app/uploads/ (pouze obrázky!)
# ============================================================================
# Povolit přístup k obrázkům v _app/uploads/
RewriteCond %{REQUEST_URI} ^/_app/uploads/.*\.(jpg|jpeg|png|webp|gif)$ [NC]
RewriteRule ^ - [L]

# Zakázat přístup k ostatním souborům v _app/
RewriteCond %{REQUEST_URI} ^/_app/
RewriteCond %{REQUEST_URI} !^/_app/uploads/.*\.(jpg|jpeg|png|webp|gif)$ [NC]
RewriteRule ^ - [F,L]

# ============================================================================
# HTTPS Redirect (odkomentovat na produkci)
# ============================================================================
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ============================================================================
# Front Controller Pattern
# ============================================================================
# Pokud soubor nebo složka fyzicky existuje, zobrazit je
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Jinak přesměrovat na index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# ============================================================================
# Security Headers
# ============================================================================
<IfModule mod_headers.c>
    # Prevence clickjackingu
    Header set X-Frame-Options "DENY"

    # Prevence MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Content Security Policy (upravit podle potřeby)
    # Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;"
</IfModule>

# ============================================================================
# Komprese
# ============================================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# ============================================================================
# Browser Caching
# ============================================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# ============================================================================
# PHP Settings
# ============================================================================
<IfModule mod_php.c>
    # Skrýt PHP verzi
    php_flag expose_php Off

    # Zvýšit limity pro upload (upravit podle potřeby)
    php_value upload_max_filesize 10M
    php_value post_max_size 12M
    php_value max_execution_time 30
    php_value memory_limit 128M
</IfModule>
